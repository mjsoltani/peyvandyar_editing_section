{
  "name": "basalam-product-manager",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.9.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "server": "ts-node --project tsconfig.server.json --transpile-only server/index.ts",
    "server:dev": "ts-node --project tsconfig.server.json server/index.ts",
    "server:prod": "node dist/server/index.js",
    "server:demo": "ts-node --project tsconfig.server.json --transpile-only server/index-demo.ts",
    "migrate": "ts-node server/migrations/migrate.ts",
    "format": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "build:server": "tsc --project tsconfig.server.json",
    "build:all": "npm run build && npm run build:server",
    "start:prod": "NODE_ENV=production npm run server:prod",
    "docker:build": "docker build -t basalam-product-manager .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "k8s:deploy": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/",
    "monitoring:up": "docker compose -f monitoring/docker-compose.monitoring.yml up -d",
    "monitoring:down": "docker compose -f monitoring/docker-compose.monitoring.yml down",
    "health:check": "curl -f http://localhost:3001/health || exit 1",
    "security:audit": "npm audit --audit-level moderate",
    "precommit": "npm run lint && npm run test:coverage",
    "deploy:vercel": "vercel --prod",
    "deploy:vercel:preview": "vercel",
    "heroku-postbuild": "npm run build",
    "render-postbuild": "npm run build"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "critters": "^0.0.23",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "next": "16.0.0",
    "next-intl": "^4.4.0",
    "pg": "^8.16.3",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "tailwindcss": "^4"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20",
    "@types/pg": "^8.15.6",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/supertest": "^6.0.3",
    "eslint": "^9",
    "eslint-config-next": "16.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
